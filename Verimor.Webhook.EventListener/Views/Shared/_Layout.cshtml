<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/bundles/css")
    @Styles.Render("~/bundles/css-m")
</head>
<body style="font-family:'Comic Sans MS';">
    <div class="header-bar">
        <div class="header-bar">
            @Html.ActionLink("Verimor", "Index", "Verimor", new { area = "" }, new { @class = "title" })
            <span style="margin-left: 2rem;"></span>
            @Html.ActionLink("Operasyon Yönetimi", "Index", "VerimorSettings", new { area = "" }, new { @class = "title" })
        </div>
    </div>
    <div class="body">
        @RenderBody()
        <hr />
        <footer>
            <p>Netspeed &copy; @DateTime.Now.Year</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
